<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout

        xmlns:android="http://schemas.android.com/apk/res/android"

        xmlns:tools="http://schemas.android.com/tools"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <!--Edit text to enter course name / note title -->

        <EditText

            android:id="@+id/idEdtTitle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            android:hint="Title" />


        <!--edit text to enter course duration / description-->

        <EditText

            android:id="@+id/idEdtDescription"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            android:hint="Description" />


        <!--edit text to display course tracks / note color -->

        <EditText

            android:id="@+id/idEdtColor"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            android:hint="Color" />


        <!--button for adding new course / add new note button -->

        <Button
            android:id="@+id/idBtnAddNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Add a Note"
            android:textAllCaps="false" />

        <!--new button for opening our course list activity-->
        <Button
            android:id="@+id/idBtnReadNotes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Read All Notes"
            android:textAllCaps="false" />




    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>